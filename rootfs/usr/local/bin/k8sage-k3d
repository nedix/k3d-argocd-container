#!/usr/bin/env bash

set -e

source /etc/profile

start() {
    yellow; echo "Starting K3D..."; normal
    is_first_boot && _create_cluster
    _create_symlinks
    _setup_coredns
    green; echo "K3D started."; normal
}

_create_cluster() {
    yellow; echo "Creating cluster..."; normal
    k3d cluster create -c /opt/k8sage/cluster-config/k3d/config.yaml
    k3d kubeconfig get k8sage > /mnt/k8sage/kubeconfig.yaml
    green; echo "Cluster created."; normal
}

_create_symlinks() {
    yellow; echo "Creating symlinks..."; normal
    mkdir ~/.kube
    ln -s /mnt/k8sage/kubeconfig.yaml ~/.kube/config
    green; echo "Symlinks created."; normal
}

_setup_coredns() {
    yellow; echo "Setting up coredns..."; normal
    while ! kubectl rollout status deployment -n kube-system coredns 2> /dev/null; do
        sleep 1
    done
    local K3D_GATEWAY=$(docker network inspect -f '{{(index .IPAM.Config 0).Gateway}}' k3d-k8sage)
    local K3D_SERVER=$(docker inspect -f '{{range .NetworkSettings.Networks}}{{.IPAddress}}{{end}}' k3d-k8sage-server-0)
    cd $(mktemp -d)
    kustomize create --namespace kube-system
    kubectl get configmap coredns -n kube-system -o yaml > coredns-configmap.yaml
    kustomize edit add resource coredns-configmap.yaml
    kustomize edit add patch --kind ConfigMap --patch '[{"op": "replace", "path": "/data/NodeHosts", "value": "'"${K3D_GATEWAY} host.k3d.internal\n${K3D_SERVER} k3d-k8sage-server-0"'"}]'
    kustomize build . | kubectl apply -f -
    kubectl rollout restart deployment -n kube-system coredns
    green; echo "Coredns set up."; normal
}

if [ "${BASH_SOURCE[0]}" = "$0" ]; then "$1" "${@:2}"; fi
